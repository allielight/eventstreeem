<div class="linetwo"></div>
<h2>bringing You what everyone is saying about LA Hacks</h2>
<div class="linethree"></div>
<div class="linefour"></div>

<div class="twitter">TWITTER </div>
<div class="twitterpic"> <img HEIGHT=40 WIDTH=70 src="http://i1.ytimg.com/vi/osxjSGdnTME/maxresdefault.jpg"> </div>
<div class="instagram"> INSTAGRAM </div>
<div class="instapic"><img HEIGHT=40 WIDTH=40 src ="http://www.halpern.co.uk/wp-content/uploads/2013/01/Instagram-Logo-with-Black-Background.jpg"></div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

<script>

$("div.lineone").hide();
$("div.linetwo").hide();
$("h1").hide();
$("h2").hide();
$("div.linethree").hide();
$("div.linefour").hide();
$("div.twitter").hide(); 
$("div.twitterpic").hide();
$("div.instagram").hide(); 
$("div.instapic").hide();
  $("button").click(function() {
   $('.background').toggleClass('backgroundnew');
   $("div.lineone").hide();
   $("div.linetwo").hide();
   $("button").hide();
   $("div.lineone").slideUp (200).delay(3000).fadeIn(400);
   $("div.linetwo").slideUp (200).delay(3000).fadeIn(400);
     $("h1").slideUp(500).delay(3000).fadeIn(400);
     $("h2").slideUp(500).delay(3000).fadeIn(400);
   $("div.linethree").slideUp (200).delay(3000).fadeIn(400);
   $("div.linefour").slideUp (200).delay(3000).fadeIn(400);
   $("div.twitter").slideUp(200).delay(3000).fadeIn(400);
   $("div.twitterpic").slideUp(200).delay(3000).fadeIn(400);
   $("div.instagram").slideUp(200).delay(3000).fadeIn(400);
   $("div.instapic").slideUp(200).delay(3000).fadeIn(400);   
  });

</script>
</body>

