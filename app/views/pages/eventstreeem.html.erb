  width: 600px;
  background: #aaaaaa;
  position: absolute;
  top: 370px;
  left: -200px;
}

.linefour {
  color: #aaaaaa;
  height: 3px;
  width: 600px;
  background: #aaaaaa;
  position: absolute;
  top: 370px;
  right: -240px;
}

.twitter {
  font-family: 'Federo';
  font-size: 33px;
  color: white;
  position: relative;
  top: 330px;
  right: 150px;
}

.twitterpic {
  top: 90px;
  right: 219px;
}

.twitterpic:hover {
  transition: 1.5s;
  top: 90px;
  right: 20px;
}

.instagram {
  font-family: 'Federo';
  font-size: 33px;
  color: white;
  position: relative;
  top: -150px;
  right: -555px;
}

.instapic {
  top:-390px;
  right:-515px;
}

.instapic:hover {
  transition: 1.5s;
  top: -390px;
  right: -745px;
}

</style>

</head>

<body>
<button>#LAHACKS</button>
<div class="background"> </div>
